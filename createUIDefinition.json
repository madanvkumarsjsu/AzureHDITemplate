{
    "handler": "Microsoft.Compute.MultiVm",
    "version": "0.0.1-preview",
    "parameters": {
        "basics": [
            {
                "name": "clusterName",
                "type": "Microsoft.Compute.UserNameTextBox",
                "label": "ClusterName",
                "toolTip": "Cluster Name for HDI cluster",
                "osPlatform": "Windows"
            }
        ],
        "steps": [
            {
                "name": "Credentials",
                "label": "Access Settings",
                "subLabel": {
                    "preValidation": "Configure the Access settings",
                    "postValidation": "Done"
                },
                "bladeTitle": "Credential settings",
                "elements": [
                    {
                        "name": "clusterLoginUserName",
                        "type": "Microsoft.Compute.UserNameTextBox",
                        "label": "clusterLoginUserName",
                        "toolTip": "Cluster Login Name for HDI cluster",
                        "defaultValue": {
                            "type": "admin"
                        }
                    },
                    {
                        "name": "clusterLoginPassword",
                        "type": "Microsoft.Compute.CredentialsCombo",
                        "label": {
                            "password": "Password",
                            "confirmPassword": "Confirm password"
                        },
                        "toolTip": {
                            "password": "Cluster password for the HDI cluster"
                        }
                    },
                    {
                        "name": "sshUserName",
                        "type": "Microsoft.Compute.UserNameTextBox",
                        "label": "sshUserName",
                        "toolTip": "Cluster SSH User"
                    },
                    {
                        "name": "sshPassword",
                        "type": "Microsoft.Compute.CredentialsCombo",
                        "label": {
                            "password": "Password",
                            "confirmPassword": "Confirm password"
                        },
                        "toolTip": {
                            "password": "SSH password"
                        }
                    }
                ]
            }
        ],
        "outputs": { 
            "location": "[location()]",
            "clusterName": "[steps('basics').clusterName]",
            "clusterLoginUserName": "[steps('Credentials').clusterLoginUserName]",
            "clusterLoginPassword" : "[steps('Credentials').clusterLoginPassword]",
            "sshUserName": "[steps('Credentials').sshUserName]",
            "sshPassword": "[steps('Credentials').sshPassword]"
        }
    }
}
